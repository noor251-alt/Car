# Configuration de l'environnement backend CarCare

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (URLs séparées par des virgules)
FRONTEND_URL=http://localhost:3000,https://your-app-domain.com

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=carcare_db
DB_USER=postgres
DB_PASSWORD=your_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRE=7d

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Paymee
PAYMEE_TOKEN=your_paymee_token
PAYMEE_URL=https://api.paymee.tn

# Firebase (Notifications Push)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_password

# App Settings
COMMISSION_RATE=0.15
REFERRAL_BONUS=5.00
PREMIUM_PRICE=49.99